{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "noWatch": true
  },
  "extends": [
    "agoda"
  ],
  "rules": {
    "@typescript-eslint/indent": [
      "warn",
      2
    ],
    "react/jsx-indent-props": [
      "warn",
      2
    ],
    "react/jsx-indent": [
      "warn",
      2
    ],
    "arrow-parens": "off",
    "import/no-unresolved": "off",
    "no-console": "warn",
    "react/jsx-props-no-spreading": [
      "error",
      {
        "html": "ignore"
      }
    ]
  },
  "globals": {
    "__DEV__": "readonly"
  }
}