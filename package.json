{
  "name": "perf-form",
  "version": "0.0.1",
  "description": "React.js forms, performant way ðŸ”¥",
  "files": [
    "lib"
  ],
  "main": "lib/index.cjs.js",
  "module": "lib/index.js",
  "browser": "lib/index.umd.js",
  "types": "lib/index.d.ts",
  "author": "Maciej Malkowski",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .ts,.tsx --ignore-path .gitignore ./src/",
    "semantic-release": "semantic-release -e semantic-release-monorepo",
    "prebuild": "rimraf lib",
    "build": "rollup -c && yarn emit-declarations",
    "watch": "rollup -c -w --dev",
    "typecheck": "tsc",
    "watch:ts": "yarn emit-declarations --watch",
    "emit-declarations": "tsc -p tsconfig.json -d --noEmit false --emitDeclarationOnly --isolatedModules false --declarationDir \"./lib/\"",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "peerDependencies": {
    "react": "^16.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-transform-modules-commonjs": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@types/jest": "^24.0.22",
    "@types/react": "^16.9.11",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "eslint": "^6.6.0",
    "eslint-config-agoda": "^1.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "jest": "^24.9.0",
    "react": "^16.11.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.26.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^5.1.2",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "tiny-warning": "^1.0.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/"
    ]
  }
}
